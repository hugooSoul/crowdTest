<% if @displayed_projects.any? %>

  <%= render 'projects/carousel', projects: @displayed_projects %>

  <div class="container">
    <br><br><br>
    <h3 class="project-subtitle">Our projects</h3>
    <div class="row">
      <%= render @projects %>
    </div>
  </div>

<% else %>

  <div class="container text-center">
    <br><br><br>
    <h2>Create your first project</h2>
    <%= link_to "Star project!", "#", class: "btn btn-success btn-lg" %>
  </div>

<% end %>
